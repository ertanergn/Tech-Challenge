@{
    ViewBag.Title = "Index";
}

<script type="text/javascript">
    $(document).ready(function () {
        var pageModel = new ScoreCalculatorModel();
        ko.applyBindings(pageModel);
    });
</script>

<div class="container">
        <div class="row centered-form">
        <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-4">
        	<div class="panel panel-default">
        		<div class="panel-heading">
                        <h3 class="panel-title">Bowling Score Calculator</h3>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class=" col-md-9 col-lg-9">
                                <form role="form" name="submitFramesForm" id="submitFramesForm" data-bind="submit: submitFrames">
                                    <table class="table">
                                        <tbody>
                                        <tr>
                                            <td>First Frame</td>
                                            <td><input type="text" name="firstFrame" id="firstFrame" class="form-control input-sm" placeholder="Please enter your score" data-bind="value: firstFrame, valueUpdate: 'afterkeydown'"></td>
                                        </tr>
                                        <tr data-bind="visible: isSecondFrameActive">
                                            <td>Second Frame</td>
                                            <td><input type="text" name="secondFrame" id="secondFrame" class="form-control input-sm" placeholder="Please enter your score" data-bind="value: secondFrame, valueUpdate: 'afterkeydown'"></td>
                                        </tr>
                                        <tr data-bind="visible: isBonusFrameActive">
                                            <td>Bonus Frame</td>
                                            <td><input type="text" name="bonusFrame" id="bonusFrame" class="form-control input-sm" placeholder="Please enter your score" data-bind="value: bonusFrame"></td>
                                        </tr>
                                        <tr>
                                            <td>Current frame</td>
                                            <td><span data-bind="text: currentFrame"/></td>
                                        </tr>
                                        <tr>
                                            <td>Frames played</td>
                                            <td><span data-bind="text: framesPlayed"/></td>
                                        </tr>
                                        <tr>
                                            <td>Score</td>
                                            <td><span data-bind="text: score"/></td>
                                        </tr>
                                        <tr>
                                            <td><input type="submit" value="Submit Frames" class="btn btn-sm btn-success"></td>
                                        </tr>
                                        </tbody>
                                    </table>
                                </form>
                            </div>
                        </div>
                    </div>
	    		</div>
    		</div>
    	</div>
    </div>
